<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="15dp">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/img_university"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="10dp"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/txt_uni_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_university"
        android:clickable="false"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:text="Title"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_uni_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_uni_title"
        android:layout_toRightOf="@id/img_university"
        android:autoLink="phone"
        android:clickable="true"
        android:maxLines="1"
        android:text="Tel: N/A"
        android:textColor="@android:color/white"
        android:paddingStart="10dp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/txt_uni_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_uni_tel"
        android:layout_toRightOf="@id/img_university"
        android:autoLink="email"
        android:clickable="true"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:text="Email: N/A"
        android:textColor="@android:color/white"
        tools:ignore="RtlCompat,RtlSymmetry" />

    <TextView
        android:id="@+id/txt_uni_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_uni_Email"
        android:layout_toEndOf="@+id/img_university"
        android:layout_toRightOf="@+id/img_university"
        android:autoLink="none|web|all"
        android:clickable="true"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingStart="10dp"
        android:text="Address: N/A"
        android:textColor="@android:color/white"
        tools:ignore="RtlCompat,RtlSymmetry" />

</RelativeLayout>