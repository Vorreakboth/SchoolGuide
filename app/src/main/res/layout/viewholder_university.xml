<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:padding="15dp"
    android:background="@color/color_midnight_blue">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/img_university"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_toRightOf="@id/img_university"
        android:paddingLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_uni_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ellipsize="end"
            android:fontFamily="@font/odor_mean_chey"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:text="Title"
            android:textColor="@android:color/white"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_uni_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:clickable="true"
            android:fontFamily="@font/odor_mean_chey"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:text="Tel: N/A"
            android:textColor="@android:color/white"
            android:textColorLink="@android:color/white"
            android:textSize="16dp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/txt_uni_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="email"
            android:clickable="true"
            android:fontFamily="@font/odor_mean_chey"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:text="Email: N/A"
            android:textColor="@android:color/white"
            android:textColorLink="@android:color/white"
            android:textSize="16dp"
            tools:ignore="RtlCompat,RtlSymmetry" />

        <TextView
            android:id="@+id/txt_uni_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="none|web|all"
            android:clickable="true"
            android:ellipsize="end"
            android:fontFamily="@font/odor_mean_chey"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:text="Address: N/A"
            android:textColor="@android:color/white"
            android:textColorLink="@android:color/white"
            android:textSize="16dp"
            tools:ignore="RtlCompat,RtlSymmetry" />
    </LinearLayout>

</RelativeLayout>